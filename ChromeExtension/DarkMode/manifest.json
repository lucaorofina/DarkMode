{
  "manifest_version": 2,
  "name": "Simple Dark Mode Toggle",
  "version": "0.1",
  "description": "A simple extension to toggle dark mode on websites.",
  "permissions": ["activeTab", "storage"],

  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Toggle Dark Mode"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "icons": {
    "16": "icon16.png"
  }
}
